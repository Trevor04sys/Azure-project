									"userProperties": [],
									"typeProperties": {
										"variableName": "new_cdc",
										"value": {
											"value": "@{activity('Max_cdc').output.resultSets[0].rows[0].cdc}",
											"type": "Expression"
										}
									}
								}
							]
						}
